<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaMenu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="310dp"
        android:layout_height="113dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_ecoenergy_removebg_preview_copia" />

    <Button
        android:id="@+id/button2"
        android:layout_width="362dp"
        android:layout_height="71dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#2A264059"
        android:drawableLeft="@drawable/icon_carro"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="@string/btn_calculadora"
        android:textColor="#289907"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button3"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#2A264059"
        android:drawableLeft="@drawable/icon_ideias"
        android:fontFamily="@font/league_spartan_semibold"
        android:text="@string/btn_ideias"
        android:textColor="#289907"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

</androidx.constraintlayout.widget.ConstraintLayout>